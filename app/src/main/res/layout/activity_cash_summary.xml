<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/layout_cashsummary"
    tools:context=".Cash_Summary">
    <LinearLayout
        android:background="@color/backgroundlight"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorAccent"
                        android:textSize="11dp"
                        android:text="From Date"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04-12-2019"
                    android:paddingStart="3dp"
                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout>
                <ImageView
                    android:layout_weight="1.8"
                    android:src="@drawable/ic_calendar_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          app:cardCornerRadius="10dp"
          android:layout_weight="1"
          android:layout_margin="3dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:orientation="horizontal"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <LinearLayout
                  android:paddingEnd="15dp"
                  android:paddingStart="15dp"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <LinearLayout
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:textColor="@color/colorAccent"
                          android:textSize="11dp"
                          android:textStyle="bold"
                          android:text="To Date"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                      </TextView>
                      <TextView
                          android:textSize="15dp"
                          android:text="04-12-2019"
                          android:paddingStart="3dp"
                          android:textStyle="bold"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                      </TextView>
                  </LinearLayout>
                  <ImageView
                      android:layout_weight="1.8"
                      android:src="@drawable/ic_calendar_leave"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                  </ImageView>
              </LinearLayout>
          </LinearLayout>
      </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:background="#858787" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="start"
                        android:textSize="12dp"
                        android:text="Opening Balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:text="₹ 1,500000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="2dp"

                android:layout_height="45dp"
                android:background="#929195" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginRight="10dp"
                            android:textSize="12dp"
                            android:text="Closing Balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="₹ 500000"
                            android:textColor="@color/colorAccent"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"

            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:background="#858787" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

                    <LinearLayout
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <Button
                            android:layout_gravity="end"
                            android:id="@+id/button_credit"
                            android:textColor="#fff"
                            android:background="@drawable/bg_button_blue"
                            android:text="credit"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                        </Button>

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:elevation="6dp"
                            android:layout_height="4dp"
                            android:background="@color/colorPrimaryDark" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button

                            android:layout_gravity="end"
                            android:id="@+id/button_debit"
                            android:textColor="#000"
                            android:background="@drawable/bg_button_disable"
                            android:text="debit"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                        </Button>
                        <View

                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:elevation="6dp"
                            android:layout_height="4dp"
                            android:background="@color/colorPrimaryDark" />

                    </LinearLayout>
                </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hide"
            android:gravity="center|end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Graph "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/image_minus"
                android:src="@drawable/ic_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="#E2E2E2"
            android:id="@+id/layout_graph"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layout_search"
            android:background="@drawable/bg_edit_brown"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <androidx.appcompat.widget.SearchView
              android:id="@+id/searchView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:scrollbars="none"
                android:id="@+id/list_cashsummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>